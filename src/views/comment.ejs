<%- include('inc/head.ejs')%>
 <!-- header -->
 <header id="header">
    <div class="hd-line">
        <a href="/feed">
            <img src="/public/images/imagesK/backBtn.svg" alt="뒤로가기 버튼" class="back-ico">
        </a>
        <!-- tit -->
        <h2 class="comment_h2">댓글<span class="comt-count">4</span></h2>
    </div>
</header>

<div class="comment-wrap">
    <div>
        <!-- 작성자 정보-->
        <div class="writer">
            <div class="user-img">
                <img src="/public/images/imagesK/profile.svg" alt="프로필이미지">
            </div>

            <div class="user-prf">
                <div class="user-inf">
                    <h4>Comet_joy</h4>
                    <p class="time writer-time">5분전</p>
                </div>


                <span>게시물 내용이 나오는 곳 입니다.</span>
                <span class="more">
                <a href="#">더 보기</a>
            </span>
            </div>
        </div>
    </div>

    <div class="comment inner">
        <div class="user-img comment-user">
            <img src="/public/images/imagesK/profile.svg" alt="프로필이미지">
            <span class="name">Comet_joy</span>
            <span class="txt">댓글을 달았어요 :)♥</span>
            <span class="time">15초전</span>
            <p class="reply"><a href="#">답글달기</a></p>
        </div>
    </div>
    <!-- 댓글 입력창 -->
    <form class="comment-form">
        <input class="comt-tf" type="text" placeholder="댓글을 입력하세요.">
        <button type="button" class="comt-btn"><img src="/public/images/imagesK/send.svg" alt="프로필이미지"></button>
    </form>
</div>
<%- include('inc/tail.ejs')%>