<%- include('inc/head.ejs')%>

<header id="header">
    <div class="hd-tit">
        <a href="/feed/photo">
            <img src="/public/images/imagesK/backBtn.svg" alt="뒤로가기 버튼" class="back-ico">
        </a>
        <!-- tit -->
        <h2 class="phto_h2">Write</h2>
    </div>
</header>

<div class="upload">
    <% if (result === 'img'){%>
        <div class="post-img post-slide">
            <%for (let i=0; i<selectedImages.length; i++){%>
                <div class="img-box"  img-name=<%=selectedImages[i]%> index=<%=index%> user_id=<%=user_id%>>
                    <img class="cover" src="/uploads/<%=selectedImages[i]%>" alt="게시물이미지">
                    <button class="delete-btn" type="button" img-name=<%=selectedImages[i]%>>삭제버튼</button>
                </div>
            <%}%>
        </div>
    <%}%>    
    <!-- 게시글 입력창 -->
    <div class="upload-txt">
        <textarea class="autosize" name="text" placeholder="Write a caption..." required="required"></textarea>
    </div>

    <div class="upload-btn">
        <button class="upload-next" type="button"> NEXT </button>
    </div>
</div>

<script src="/public/js/upload.js"></script>
